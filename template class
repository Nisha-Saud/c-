#include<iostream>
using namespace std;
template<class T>
const  int size =5;
class array 
{
   private : T a[size];
  public :
  void getarray();
 T findMax();
} ;
template<class T>
void array<T> :: getarray()
{int i;
    cout<<"enter any five integers";
    for(i=0;i<size ;i++)
    {
    cin>>a[i];
    }
}
template <class T>
T array<T>:: findMax()
{ int i;
max = a[0];
    for(i=1;i<size;i++)
    {
        if(max<a[i])
        {
            max =a[i];
        }
    }
    return (max);
}
int main()
{
    array<int>a1;
    a1.getarray();
    cout<<"The maximum value is "<<a1.findMax();
    array<float>a2;
    a2.getarray();
    cout<<"The maximum value is "<<a2.findMax();
    return 0;
}
